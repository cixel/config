# The syntax is "key = value". The whitespace around the equals doesn't matter.
# background = 282c34
# foreground= ffffff

# Blank lines are ignored!

#keybind = ctrl+z=close_surface
#keybind = ctrl+d=new_split:right
keybind = super+alt+i=inspector:toggle
keybind = super+plus=increase_font_size:1
keybind = super+minus=decrease_font_size:1
keybind = super+comma=unbind

# Empty values reset the configuration to the default value

font-family = "Hack"
font-size = 12
font-thicken = true
adjust-cell-width = -1

theme = "GruvboxDarkHard"
# theme = "nord"

window-padding-color = background
window-padding-x = 2
window-padding-y = 2

palette = 0=#1d2021
palette = 1=#fb4934
palette = 2=#b8bb26
palette = 3=#fabd2f
palette = 4=#83a598
palette = 5=#d3869b
palette = 6=#8ec07c
palette = 7=#d5c4a1
palette = 8=#665c54
palette = 9=#fb4934
palette = 10=#b8bb26
palette = 11=#fabd2f
palette = 12=#83a598
palette = 13=#d3869b
palette = 14=#8ec07c
palette = 15=#fbf1c7

auto-update = off

scrollback-limit = 0

# TODO: this sucks
command = /etc/profiles/per-user/ehdens/bin/zsh
